{
  "name": "oro-placeholder",
  "version": "0.0.1",
  "description": "placeholder image urls",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "test": "mocha --opts .mocha ./src/**/*_test.js",
    "watch:tests": "npm test -- --watch",
    "build:lib": "babel src -d lib",
    "build:umd": "webpack src/index.js dist/placeholder.js --config webpack.config.dev.js",
    "build:umd:min": "webpack src src/index.js dist/placeholder.min.js --config webpack.config.prod.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "github.com/DrawboardLtd/brick"
  },
  "keywords": [
    "Drawboard"
  ],
  "author": "orodio",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-preset-stage-3": "^6.3.13",
    "babel-register": "^6.3.13",
    "mocha": "^2.3.4",
    "rimraf": "^2.5.0",
    "webpack": "^1.12.9"
  }
}
